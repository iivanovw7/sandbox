---
import React from 'react';

import { ContactsCard, HelloCard, JobCard, SkillCard } from '@/features';
import { APP_CONFIG, Cards } from '@/shared';
import BaseTemplate from '@/templates/Base.astro';

const { title } = APP_CONFIG;
const { description } = APP_CONFIG;
---
    <BaseTemplate head={{ description, title }}>
        <Cards>
            <HelloCard client:load />
            <JobCard client:load />
            <SkillCard />
            <ContactsCard />
        </Cards>
    </BaseTemplate>
