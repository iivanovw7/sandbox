---
import React from 'react';

import { BlogPost } from '@/features';
import { APP_CONFIG, type BlogCollectionEntry, Page } from '@/shared';

import BaseTemplate from './Base.astro';

const { content } = Astro.props as { content: BlogCollectionEntry['data'] };
const { description, title } = content;
---
    <BaseTemplate head={{ description, title: `${title} - ${APP_CONFIG.siteName}` }}>
        <Page>
            <BlogPost content={content}>
                <slot></slot>
            </BlogPost>
        </Page>
    </BaseTemplate>
