{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@sandbox/ts-config/tsconfig.qwik.json",
    "compilerOptions": {
        "baseUrl": ".",
        "types": [
            "node",
            "vite/client"
        ],
        "paths": {
            "/@/*": [
                "src/*"
            ],
            "/#/*": [
                "types/*"
            ],
            "@/*": [
                "src/*"
            ],
            "#/*": [
                "types/*"
            ]
        }
    },
    "include": [
        "config/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
        "types/**/*.ts",
        "types/**/*.d.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "**/*.js"
    ]
}
